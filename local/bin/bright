#!/bin/sh

#
# ~/local/bin/bright
#

CMD="$(which brightnessctl 2>/dev/null)"
DEV=""
DISPVAL=0
OUTPUTFILE="$HOME/.bright"

if [ -z "$CMD" ]
then
	printf "install a package that supplies the brightnessctl utility\n"
	exit 127
fi

DEV="$($CMD | tr -d \' | grep backlight | awk '{print $2}')"

if [ -z "$DEV" ]
then
	printf "this system doesn't have a display backlight\n"
	exit 1
fi

COMP="$(echo "$1" | tr '[:upper:]' '[:lower:]')"
case "$COMP" in
	"up" )
		$CMD -qd "$DEV"  set +5%
		;;
	"down" )
		$CMD -qd "$DEV" set 5%-
		;;
	"off" )
		$CMD -qsd "$DEV"
		$CMD -qd "$DEV" set 0%
		;;
	"on" )
		$CMD -qrd "$DEV"
		;;
	[0-9]* )
		$CMD -qd "$DEV" set "$COMP"%
		;;
	* )
		;;
esac

DISPVAL="$($CMD -d "$DEV" | sed -n 2p | awk '{print $4}' | tr -d '()')"

if env | grep -q DISPLAY
then
	echo "$DISPVAL" > "$OUTPUTFILE"
	echo "$DISPVAL" | tr -d "%" | xargs do_ob
else
	echo "$DISPVAL"
fi
